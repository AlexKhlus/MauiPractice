<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="DevsPark.Views.OffersView"
			 Title="Offers">
	<Grid RowDefinitions=".1*, .9*">
		<Label
			FontAttributes="Bold"
			FontSize="25"
			HorizontalOptions="Center" VerticalOptions="Center"
			Text="{Binding CompanyName, StringFormat='{0} offers'}" />
		<CollectionView
			Grid.Row="1"
			ItemsSource="{Binding Offers}">
			<CollectionView.ItemTemplate>
				<DataTemplate>
					<Border
						Background="#2B0B98"
						Stroke="#C49B33"
						StrokeShape="RoundRectangle 20, 0, 0, 20"
						StrokeThickness="4">
						<Grid ColumnDefinitions=".3*, .7*" RowDefinitions="*, *">
							<Image Grid.RowSpan="2" Source="{Binding ImagePath}" />
							<Label
								Grid.Column="1"
								HorizontalOptions="Center" VerticalOptions="Center"
								FontSize="25"
								TextColor="White"
								Text="{Binding Discount, StringFormat='{0}%'}" />
							<Label
								Grid.Row="1" Grid.Column="1"
								HorizontalOptions="Center"
								FontSize="15"
								TextColor="LightGray"
								Text="{Binding Description}" />
						</Grid>
					</Border>
				</DataTemplate>
			</CollectionView.ItemTemplate>
		</CollectionView>
	</Grid>
</ContentPage>